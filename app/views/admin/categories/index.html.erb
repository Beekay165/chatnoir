<% title "Categories" %>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <%= link_to "Add Category", new_admin_category_path, class: "btn btn-outline-primary float-right" %>
            <h4 class="card-title">Categories List</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Date Published
                            </th>
                            <th>
                                Link
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @categories.each do |category| %>
                        <tr>
                            <td>
                                <%= category.name %>
                            </td>
                            <td>
                                <%= category.created_at.strftime("%b %e, %Y") %>
                            </td>
                            <td>
                                <%= link_to edit_admin_category_path(category.id)  do%>
                                Edit
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>