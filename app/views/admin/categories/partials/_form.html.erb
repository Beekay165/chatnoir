<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class:
          "form-control", size: "20" %>
</div>
<div class="form-group">
    <%= f.label :image, "Image Url" %>
    <%= f.text_field :image, class:
          "form-control" %>
</div>

<%= f.submit class: "btn btn-success mr-2" %>