<% title "Edit Product" %>

<div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Edit Order</h4>
                  <p class="card-description">
                    Use the form below to edit information about an order
                  </p>
                  <form class="forms-sample">
                    <div class="form-group">
                      <label for="name">Name</label>
                      <input type="text" class="form-control" id="name" placeholder="Name" value="To Be Completed" disabled>
                    </div>
                    
                    <div class="form-group">
                      <label for="note">Note</label>
                      <textarea class="form-control" id="note" rows="20" disabled><%=  %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="total_price">Total Price</label>
                        <div class="input-group">
                          <div class="input-group-prepend bg-primary border-primary">
                            <span class="input-group-text bg-transparent text-white">â‚¬</span>
                          </div>
                          <input type="text" class="form-control" id="total_price" value="<%= e %>">
                        </div>
                    </div>
                    <div class="form-group">
                      <label for="delivery_address">Delivery Address</label>
                      <input type="text" class="form-control" id="delivery_address" placeholder="Delivery Address" value="<%=  %>">
                    </div>
                    <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control" id="status">
                      <option><%=  %></option>
                    </select>
                  </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
