<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class:
          "form-control", size: "20" %>
</div>
<div class="form-group">
    <%= f.label :image, "Image Url" %>
    <%= f.text_field :image, class:
          "form-control" %>
</div>
<div class="form-group">
    <%= f.label :stock %>
    <%= f.number_field :stock, class:
          "form-control", min:0, step: 1 %>
</div>
<div class="form-group">
    <%= f.label :price %>
    <div class="input-group">
        <div class="input-group-prepend bg-primary border-primary">
            <span class="input-group-text bg-transparent text-white">â‚¬</span>
        </div>
        <%= f.text_field :price, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <%= f.label :category %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <% cb.label(class: "form-check-label", style: "display:block; margin-bottom:10px;") do %>
    <%= cb.check_box + cb.text %>
    <% end %>
    <% end %>
</div>
<div class="form-group">
    <%= f.label :variants %>
    <%= f.collection_check_boxes :variant_ids, Variant.all, :id, :option do |cb| %>
    <% cb.label(class: "form-check-label", style: "display:block; margin-bottom:10px;") do %>
    <%= cb.check_box + cb.text %>
    <% end %>
    <% end %>
</div>
<div class="form-group">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name, class:
          "form-control" %>
</div>
<div class="form-group">
    <%= f.label :sku, "SKU" %>
    <%= f.text_field :sku, class:
          "form-control" %>
</div>

<%= f.submit class: "btn btn-success mr-2" %>