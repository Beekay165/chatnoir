<% title "Variants" %>

<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <%= link_to "Add variant", new_admin_variant_path, class: "btn btn-outline-primary float-right" %>
      <h4 class="card-title">Variants List</h4>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>
                Preview
              </th>
              <th>
                Name
              </th>
              <th>
                Option
              </th>
              <th>
                Stock
              </th>
              <th>
                Price
              </th>
              <th>
                Date Published
              </th>
              <th>
                Link
              </th>
            </tr>
          </thead>
          <tbody>
            <% @variants.each do |variant| %>
            <tr>
              <td>
                <% if variant.image.blank? %>
                <%= image_tag variant.image %>
                <% else %>
                <%= image_tag "https://image.jimcdn.com/app/cms/image/transf/none/path/s8e84ffc7090a5bd2/image/i9eed849b0f18dd36/version/1534159621/image.png" %>
                <% end %>
              </td>
              <td>
                <%= variant.name %>
              </td>
              <td>
                <%= variant.option %>
              </td>
              <td>
                <%= variant.stock %>
              </td>
              <td>
                â‚¬
                <%= variant.price %>
              </td>
              <td>
                <%= variant.created_at.strftime("%b %e, %Y") %>
              </td>
              <td>
                <%= link_to edit_admin_variant_path(variant.id)  do%>
                Edit
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>