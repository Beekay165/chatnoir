<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :option %>
    <%= f.text_field :option, class:
          "form-control" %>
</div>
<div class="form-group">
    <%= f.label :image, "Image Url" %>
    <%= f.text_field :image, class:
          "form-control" %>
</div>
<div class="form-group">
    <%= f.label :stock %>
    <%= f.number_field :stock, class:
          "form-control", min:0, step: 1 %>
</div>
<div class="form-group">
    <%= f.label :price %>
    <div class="input-group">
        <div class="input-group-prepend bg-primary border-primary">
            <span class="input-group-text bg-transparent text-white">â‚¬</span>
        </div>
        <%= f.text_field :price, class: "form-control" %>
    </div>
</div>
<div class="form-group">
    <%= f.label :sku, "SKU" %>
    <%= f.text_field :sku, class:
          "form-control" %>
</div>

<%= f.submit class: "btn btn-success mr-2" %>