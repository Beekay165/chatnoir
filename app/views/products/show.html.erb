<% content_for :title, @singleitem.name %>
<div class="breadcumb_area bg-img" >
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-12">
        <div class="page-title text-center">
          <h2><%=@singleitem.name%></h2>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container clearfix mb-30" style="padding-bottom:20px;">
 <!-- Single Product Thumb -->
        <div class="single_product_thumb clearfix" style = "width:45%; float:left;">
            <div class="product_image">

                <%= image_tag @singleitem.image%>

            </div>
		</div>

 <!-- ##### Single Product Details Area Start ##### -->
    <section class="single_product_details_area d-flex align-items-center" style = "width:50%; float:right;">
        <!-- Single Product Description -->
        <div class="single_product_desc clearfix">
            <span><%=@singleitem.artist_name%></span>
            <a href="cart.html">
                <h2><%=@singleitem.name%></h2>
            </a>
            <p class="product-price"> &euro;<%=@singleitem.price%></p>
            <p class="product-desc"><%=@singleitem.description%></p>

            <!-- Form -->
            <form class="cart-form clearfix" method="post">
                <!-- Select Box -->
                <div class="select-box d-flex mt-50 mb-30">
                    <select name="select" id="productMaterial" class="mr-5">
					<% @variantsItem.each do |v|%>
                        <option value=<%= v.name %>><%=v.option%>&nbsp; &euro;<%=v.price%><h2></option>
                    <%end%>
                    </select>
                  
                </div>
                <!-- Cart & Favourite Box -->
                <div class="cart-fav-box d-flex align-items-center">
                    <!-- Cart -->
                    <button type="submit" name="addtocart" class="btn btn-block" style="border:1px solid black; margin-bottom: 10px; background-color:white;">Add to Cart</button>
                </div>
            </form>
        </div>
    </section>
</div>
    <!-- ##### Single Product Details Area End ##### -->