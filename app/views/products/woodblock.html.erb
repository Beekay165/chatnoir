<% content_for :title, @header %>
<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb_area bg-img">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-12">
        <div class="page-title text-center">
          <h2>Woodblock Prints</h2>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- product count -->

<!-- ##### Shop Grid Area Start ##### -->
<section class="section-padding-50">
  <div class="container">
    <div class="row">
            <!-- Total Products -->
            <div style ="display:block; text-transform:uppercase; padding-left:2.5%">
                <span>
                  <%=@productItem.count %> woodblock prints found
                  </span>
                </div>

      <hr style ="display:block; height:1px; width:100%;"/>
            <h4 class="mb-20" style ="display:block;padding-left:2.5%">Catagories</h4>
            <!--  Catagories  -->
              <ul class="categories_container mb-10" style="padding-left:0rem; padding-left:2.5%">
                <!-- Single Item -->
                <li style =" display: inline-block; float:left; padding: 0 10px 0 0;">
                  <%= link_to "All", products_path%>
                </li>
                <!-- Single Item -->
                <li style =" display: inline-block; float:left; padding: 0 10px 0 10px;">
                  <%= link_to "Posters", posters_path%>
                </li>
                <!-- Single Item -->
                <li style =" display: inline-block; float:left; padding: 0 10px 0 10px;">
                  <%= link_to "Illustrations", illustrations_path%>
                 </li>
                <!-- Single Item -->
                <li style =" display: inline-block; float:left; padding: 0 10px 0 10px;">
                  <%= link_to "Woodblock Prints", woodblocks_path%>
                </li>
              </ul>

        <div class="shop_grid_product_area">
<%@productItem.each do |item|%>
            <!-- Single Product -->
              <ul style="display:inline-block; width:24%; max height:440px; padding-left:0rem; padding:2.5%">
                <!-- Product Image -->
                <li><div class="product-img">
                    <%= image_tag item.image%>
                    </div>
                </li>
                <!-- Product Description -->
                <li>
                <div class="product-description">
                  <a href="/products/show/<%=item.id%>">learn more >></a>
                    <h6 style ="margin-bottom:0px"><%=item.name%></h6>
                  </a>
                  <p class="product-price" style ="margin-bottom:5px;">
                    &euro; <%=item.price%>
                  </p>
                  <!-- Hover Content -->
                  <div class="hover-content">
                    <!-- Add to Cart -->
                    <div class="add-to-cart-btn">
                      <a href="#" class="btn btn-block" style="border:1px solid black; margin-bottom: 10px;">Add to Cart</a>
                    </div>
                  </div>
                </div>
                </li>
              </ul>

        <%end%>   
          </div>
     
    </div>
    </div>  
</section>
<!-- ##### Shop Grid Area End ##### -->


